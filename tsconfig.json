{
	"compilerOptions": {
		"module": "node16",
    "target": "es2021", // set to the *lowest* target you support
    "strict": true,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "rootDir": "lib",
    "outDir": "built",
		"allowJs": true,
		"allowImportingTsExtensions": true,
		"noEmit": true,
    "lib": ["es2021", "dom"],
	},
	"include": ["./lib/**/*"]
}
